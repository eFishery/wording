{
  "name": "wordspaces",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write --ignore-unknown"
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eword"
    ]
  },
  "commitlint": {
    "extends": [
      "eword"
    ]
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.js": [
      "eslint --fix",
      "cross-env NODE_ENV=test jest --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "jest": {
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17",
    "@commitlint/prompt": "^17",
    "commitlint-config-eword": "*",
    "cross-env": "^7",
    "eslint-config-eword": "*",
    "husky": "^8",
    "jest": "^29",
    "lint-staged": "^13",
    "prettier": "^2",
    "turbo": "^1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.19"
}
